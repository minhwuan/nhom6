<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.min.css"
    />
    <link rel="stylesheet" href="stylesheets/style.css" />
    <link rel="stylesheet" href="stylesheets/sidebar.css" />
    <title>Music Player</title>
  </head>
  <body>
    <div class="container">
      <div class="sidebar-container d-none">
        <%- include('sidebar', {user: user});%>
      </div>
      <div class="menu-icons">
        <span class="bars"><i class="fa fa-bars"></i></span>
        <span class="times d-none"><i class="fa fa-times"></i></span>
      </div>
      <div class="main-container">
        <h1>Music Player</h1>

        <div class="music-container" id="music-container">
          <div class="music-info">
            <h3 id="title"></h3>
            <div class="progress-container" id="progress-container">
              <div class="progress" id="progress"></div>
            </div>
          </div>

          <audio
            src="https://cdn.pixabay.com/audio/2022/01/23/audio_64fe965d5a.mp3"
            id="audio"
          ></audio>

          <div class="img-container">
            <img
              src="https://www.bensound.com/bensound-img/buddy.jpg"
              alt="music-cover"
              id="cover"
            />
          </div>
          <div class="navigation">
            <button id="prev" class="action-btn">
              <i class="fas fa-backward"></i>
            </button>
            <button id="play" class="action-btn action-btn-big">
              <i class="fas fa-play"></i>
            </button>
            <button id="next" class="action-btn">
              <i class="fas fa-forward"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
    <script src="js/sidebar.js"></script>
    <script src="js/home.js"></script>
  </body>
</html>
