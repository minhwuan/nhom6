<div class="box">
  <h3 class="title-caption">New Song</h3>
  <form action="/songs" method="post" enctype="multipart/form-data">
    <div class="field__group">
      <label>Tên bài hát</label>
      <input
        placeholder="Enter name..."
        type="text"
        required
        minlength="2"
        maxlength="100"
        name="name"
      />
    </div>
    <div class="field__group">
      <label>Ca sĩ</label>
      <input
        required
        minlength="2"
        maxlength="100"
        placeholder="Enter singer..."
        type="text"
        name="singer"
      />
    </div>

    <div class="field__group">
      <label>Ảnh hiển thị </label>
      <input
        accept="image/png, image/jpg, image/jpeg"
        class="imagedrop"
        type="file"
        name="image"
        required
      />
    </div>

    <div class="field__group">
      <label>Video </label>
      <input
        accept="audio/mp3, audio/mpeg"
        class="imagedrop"
        name="video"
        required
        type="file"
      />
    </div>
    <div class="field__group" style="margin-top: 20px">
      <label></label>
      <button class="button">Save</button>
    </div>
  </form>
</div>
